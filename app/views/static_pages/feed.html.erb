<% if signed_in? %>
<div class="row">
  <div class="col s12 m4">
    <div class="card">
      <div class="card-content">
        <ul>
          <li>
            <%= link_to(user_path(current_user)) do %>
              <%= image_tag current_user.image.url(:thumb), class: "rounded profile-image" %>
            <% end %>
          </li>
          <li><%= link_to current_user.username, user_path(current_user) %></li>
          <li><i class="material-icons inline-icon">chat_bubble</i>&nbsp;<b>Native Language:</b>&nbsp;<%= current_user.native_language.capitalize %></li>
          <li><i class="material-icons inline-icon">mode_edit</i>&nbsp;<b>Study Language:</b>&nbsp;<%= current_user.language_of_study.capitalize %></li>
        </ul>

        <table>
          <thead>
            <tr>
              <th>Cards</th>
              <th>Followers</th>
              <th>Following</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= current_user.cards.count %></td>
              <td><%= link_to current_user.followers.count, followers_user_path(current_user) %></td>
              <td><%= link_to current_user.followed_users.count, following_user_path(current_user) %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <div class="user-actions">
      <!-- Modal Trigger -->
      <a class="btn btn-block" href="#new-flashcard-modal">New FlashCard</a>

      <!-- Modal Structure -->
      <div id="new-flashcard-modal" class="modal">
        <div class="modal-content">
          <i class="material-icons modal-action modal-close right">close</i>
          <h4>Create New FlashCard</h4>
          <%= form_for(@card) do |f| %>
            <%= f.text_field :sentence, placeholder: "Word or phrase", autocomplete: "off" %>
            <%= f.text_field :translation, placeholder: "Translation (optional)", autocomplete: "off" %>
            <div class="right-align">
              <%= f.submit "Add", class: "btn" %>
            </div>
          <% end %>
        </div>
      </div>

    </div>

  </div>

  <div class="col sm12 m8">

    <%= render 'cards/cards_list' %>

  </div>

</div>

<% end %>
