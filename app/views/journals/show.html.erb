<div class="row">
  <div class="col s12 m6">
    <div class="card">
      <div class="card-image">
        <% unless @journal.image.blank? %>
          <%= image_tag @journal.image.url(:large) %>
        <% end %>
        <span class="card-title"><%= @journal.title %></span>
      </div>
      <div class="card-content">
        <p><%= @journal.body %></p>
      </div>
    </div>
  </div>
</div>
