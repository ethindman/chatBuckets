<nav>
  <div class="nav-wrapper">
    <%= link_to "ChatBuckets", root_path, class: "brand-logo center" %>
    <ul id="nav-mobile" class="left hide-on-med-and-down">
      <li><%= link_to "Search Users", users_path %></li>
    </ul>

    <ul class="right hide-on-med-and-down">
      <!-- Dropdown Trigger -->
      <% if user_signed_in? %>
      <li>
        <%= link_to(user_path(current_user.id)) do %>
          <%= image_tag current_user.image.url(:thumb), class: "circle profile-image" %>
        <% end %>
      </li>
      <li><a class="dropdown-button" href="#!" data-activates="userMenu">Account<i class="material-icons right">arrow_drop_down</i></a></li>
      <!-- dropdown definition -->
      <ul id="userMenu" class="dropdown-content">
        <li><%= link_to current_user.username, user_path(current_user.id) %></li>
        <li class="divider"></li>
        <li><%= link_to "My buckets", user_path(current_user.id) %></li>
        <li class="divider"></li>
        <li><%= link_to "Edit Account", edit_user_registration_path %></li>
        <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
      </ul>
      <% else %>
        <li><%= link_to "Sign Up", new_user_registration_path, class: "active" %></li>
        <li><%= link_to "Sign In", new_user_session_path, class: "active" %></li>
      <% end %>
    </ul>
  </div>
</nav>


