<nav>
  <div class="nav-wrapper container">
    <%= link_to "LingoPad", root_path, class: "brand-logo center" %>
    <ul id="nav-mobile" class="left hide-on-med-and-down">
      <li class="<%= 'active' if controller?("static_pages") && action?("feed") %>"><%= link_to "Home", root_path %></li>
      <li class="<%= 'active' if controller?("users") && action?("index") %>"><%= link_to "People", users_path %></li>
    </ul>

    <ul class="right hide-on-med-and-down">
      <!-- Dropdown Trigger -->
      <% if user_signed_in? %>
      <li>
        <a class="dropdown-button" href="#!" data-activates="userMenu">
          <%= image_tag current_user.image.url(:thumb), class: "circle profile-image" %>
          <%= current_user.username %>
          <i class="material-icons right">arrow_drop_down</i>
        </a>
      </li>
      <!-- dropdown definition -->
      <ul id="userMenu" class="dropdown-content">
        <li><%= link_to "New Card", "#" %></li>
        <li><%= link_to "New Diary", "#" %></li>
        <li><%= link_to "FlashCards", cards_user_path(current_user) %></li>
        <li><%= link_to "Journals", journals_user_path(current_user) %></li>
        <li class="divider"></li>
        <li><%= link_to "Profile", user_path(current_user) %></li>
        <li><%= link_to "Likes", "#" %></li>
        <li><%= link_to "Followers", "#" %></li>
        <li><%= link_to "Following", "#" %></li>
        <li class="divider"></li>
        <li><%= link_to "Edit Account", edit_user_registration_path %></li>
        <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
      </ul>
      <% else %>
        <li><%= link_to "Sign Up", new_user_registration_path, class: "active" %></li>
        <li><%= link_to "Sign In", new_user_session_path, class: "active" %></li>
      <% end %>
    </ul>
  </div>
</nav>
