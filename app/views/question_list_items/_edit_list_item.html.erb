<%= form_for([@question_list, @question_list_item]) do |f| %>
  <%= f.text_field :content, placeholder: "Content" %>
  <%= f.text_field :translation, placeholder: "Translation" %>
  <%= f.text_area :my_response, placeholder: "My Response", class: "materialize-textarea"  %>
  <%= f.text_area :question_variations, placeholder: "Variations", class: "materialize-textarea" %>
  <%= f.text_area :notes, placeholder: "Notes", class: "materialize-textarea" %>
  <%= f.submit "Save", class: "btn" %>
<% end %>
