<div class="row">
  <!-- sidbar -->
  <div class="col s12 m3">
    <div class="list-creator-details">
      <div class="details-image">
        <%= link_to(user_path(@list_creator)) do %>
          <%= image_tag @list_creator.image.url(:medium), class: "circle responsive-img", alt: "user image" %>
        <% end %>
      </div>
      <div class="details-body">
        <p><b><%= @list_creator.username %></b></p>
      </div>
    </div>

  </div>
  <!-- main-content -->
  <div class="col s12 m9">
    <div class="section">
      <div class="right">
        <%= link_to 'Edit Bucket', edit_question_list_path(@question_list), class: "flat-btn" %>
      </div>
      <div class="question-list-details">
        <h3><%= @question_list.title %></h3>
        <p><%= @question_list.description %></p>
      </div>

      <div id="dragula-items-wrapper">

        <%= render @question_list.question_list_items %>

        <div id="form">
          <%= render "question_list_items/form" %>
        </div>
      </div>
    </div>

    <div class="section right-align">
      <%= link_to 'Delete Bucket', question_list_path, method: :delete, data: { confirm: "Are you sure you want to delete this language bucket? This action cannot be undone. You will loose all cards in this bucket." }, class: "btn red" %>
    </div>
  </div>

</div>
